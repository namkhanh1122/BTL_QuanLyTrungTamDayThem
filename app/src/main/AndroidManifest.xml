<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.BTL_QuanLyTrungTamDayThem">

        <!-- MainActivity: KHÔNG lặp lại -->
        <activity
            android:name=".Views.Activities.MainActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.BTL_QuanLyTrungTamDayThem.NoActionBar" />

        <activity
            android:name=".Views.Activities.LoginActivity"
            android:exported="false" />

        <!-- Splash là LAUNCHER -->
        <activity
            android:name=".Views.Activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.BTL_QuanLyTrungTamDayThem">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Views.Activities.CourseDetailActivity" />
        <activity android:name=".Views.Activities.DocumentActivity" />
        <activity android:name=".Views.Activities.AttendanceActivity" />
        <activity android:name=".Views.Activities.AlertsActivity" />
        <activity android:name=".Views.Activities.GradeManagementActivity" />

    </application>
</manifest>
